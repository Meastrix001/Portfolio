---
color: black
root: ../
layout: layouts/base.njk
title: Work
eleventyNavigation:
  key: Work
  order: 3
---

<section class="work container">
    <article class="work--menu">
    <h1>My work</h1>
    <section>
      <div class="titleUnderlined"></div>
      <ul>
        {% for item in cases %}
          <li><a href="#{{item.number}}">{{item.name}}</a></li>
        {% endfor %}
      </ul>
    </section>
  </article>

  <section class="work--filter">
  <h2 class="text-red">Filter <a href="?tag=#works" class="text-red clear-btn">See all</a></h2>
  <ul>
    {% for item in techStack %}
      <li>
        <a href="?tag={{item.skill}}#works">
          <p class="work--filter-option" id="{{item.skill}}">{{ item.skill }}</p>
        </a>
      </li>
    {% endfor %}
  </ul>
  </section>

      <section class="work--cards spacing" id="works">
    {% for item in cases %}
          <article id="{{item.number}}" class="work--cards--card spacing">
              <a target="_blank"href="{{item.link}}">
                <img src="{{root}}{{ item.logo }}">
                <p>{{item.linkTo}}</p>
              </a>
              <div>
                <h2>{{item.name}}</h2>
                <p class="text-gray">{{item.desc}}</p>
                  <p><span class="text-red">Tags:</span>
                  {% for tag in item.tags %}
                    <span class="work-tag" data-id="{{tag}}">{{tag}}</span>,
                  {% endfor %}
                  </p>
                <h4><a target="_blank" href="{{item.github}}">Github repo</a></h4>
              </div>
          </article>
    {% endfor %}
      </section>
</section>